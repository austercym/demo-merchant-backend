    "@types/cors": "^2.8.1",
    "@types/crypto-js": "^3.1.35",
    "@types/express-handlebars": "0.0.29",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/jwt-simple": "^0.5.33",
    "@types/request": "^2.0.3",
    "@types/uuid": "^3.4.2",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "crypto-js": "^3.1.9-1",
    "express": "^4.15.4",
    "express-handlebars": "^3.0.0",
    "jsonwebtoken": "^8.0.0",
    "jws": "^3.1.4",
    "jwt-simple": "^0.5.1",
    "node-jose": "^0.9.5",
    "pem-jwk": "^1.5.1",
    "request": "^2.81.0",
    "rimraf": "^2.6.1",
    "typescript": "^2.5.2",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/express": "^4.0.37",
    "concurrently": "^3.5.0",
    "express-swagger-generator": "^1.0.4",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.8",
    "supertest": "^3.0.0",
    "ts-jest": "^20.0.10",
    "tslint": "^5.7.0"
  }
